.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__title
        = @group.name
      .chat-main__group-info__left-box__members
        Memberï¼š
        - @group.users.each do |user|
          %li.chat-main__group-info__left-box__name
          = user.name
    .chat-main__group-info__edit
      = link_to edit_group_path(@group), class: "chat-main__group-info__edit__btn" do
        Edit 

  .messages
    = render @messages
    
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'form__submit'